<Window x:Class="LunchIsEasy.UI.Wpf.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:wpf="clr-namespace:LunchIsEasy.UI.Wpf"
                 d:DataContext="{d:DesignInstance Type=wpf:MainViewModel, IsDesignTimeCreatable=False}"
                 mc:Ignorable="d" 
                 Title="Lunch Is Easy" 
                 Height="550" 
                 Width="800"
                 WindowStyle="ThreeDBorderWindow"
                 WindowStartupLocation="CenterScreen">

    <Grid ShowGridLines="True">
        
        <Grid >

            <Frame Name="MainFrame"
                   Background="Transparent"
                   NavigationUIVisibility="Hidden">
            </Frame>

            <ContentControl Content="{Binding GetApplicationContent}"/>

        </Grid>
        
    </Grid>

</Window>
